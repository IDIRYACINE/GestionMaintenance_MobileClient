<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idir.barcodescanner">

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.idir.barcodescanner.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeBarScanner">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7616920693631792~7220990604"/>

        <activity
            android:name="com.idir.barcodescanner.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CodeBarScanner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.idir.barcodescanner.ui.screens.BarcodeGroupContentActivity"/>
        <activity android:name="com.idir.barcodescanner.ui.screens.LicensesActivity"/>

        <service android:name="com.idir.barcodescanner.infrastructure.services.DataSaverService" />
        <receiver android:name="com.idir.barcodescanner.infrastructure.services.ServiceBroadcaster" />

    </application>

</manifest>